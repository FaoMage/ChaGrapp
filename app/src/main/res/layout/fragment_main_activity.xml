<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zetaxmage.chagrapp.View.MainActivity.MainActivityFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/mainactivity_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_bottomInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_textview_dev"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorGrey"
                android:layout_margin="5dp"
                android:layout_alignParentStart="true"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_textview_version"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorGrey"
                android:layout_margin="3dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/relative_bottomInfo"
            android:layout_marginBottom="100dp">

            <Button
                android:id="@+id/button_audios"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/main_button_audios"
                android:background="@drawable/button_model"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
